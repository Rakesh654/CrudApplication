@model IEnumerable<CrudApplication.Models.Student>

<div class="container">
    <div class="row">
        <h1>Student List</h1>
        <a class="btn btn-primary m-4 text-white" style="margin-left: 50%" asp-action="Create">Create</a>
    </div>
    <div class="row">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Action</th>
            </tr>
            @if (Model.Count() > 0)
            {
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Age</td>
                        <td>
                            <a class="btn btn-info" asp-action="Edit" asp-route-Id="@obj.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@obj.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No Records Found</td>
                </tr>
            }
        </table>
    </div>
</div>
